### Адаптивные макеты

#### 1. Grid система

- Используйте flexbox для создания адаптивных grid макетов
- Применяйте разные количества колонок для разных breakpoints
- Обеспечивайте правильное выравнивание элементов

```typescript
// ✅ ПРАВИЛЬНО - адаптивный grid
const ResponsiveGrid: React.FC<{ children: React.ReactNode }> = ({
  children,
}) => {
  const { isMobile, isTablet, isLargeTablet } = useResponsive();

  const getGridStyle = () => {
    if (isMobile) {
      return {
        flexDirection: 'column' as const,
        gap: 16,
      };
    }

    if (isTablet) {
      return {
        flexDirection: 'row' as const,
        flexWrap: 'wrap' as const,
        gap: 20,
      };
    }

    if (isLargeTablet) {
      return {
        flexDirection: 'row' as const,
        flexWrap: 'wrap' as const,
        gap: 24,
      };
    }

    return {
      flexDirection: 'row' as const,
      flexWrap: 'wrap' as const,
      gap: 32,
    };
  };

  return (
    <View style={[styles.grid, getGridStyle()]}>
      {React.Children.map(children, (child, index) => (
        <View
          key={index}
          style={[
            styles.gridItem,
            {
              flex: isMobile
                ? 1
                : isTablet
                ? '0 0 calc(50% - 10px)'
                : '0 0 calc(33.333% - 16px)',
            },
          ]}
        >
          {child}
        </View>
      ))}
    </View>
  );
};

// ❌ НЕПРАВИЛЬНО - фиксированный grid

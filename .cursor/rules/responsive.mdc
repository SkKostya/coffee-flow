// ✅ ПРАВИЛЬНО - адаптивные изображения
interface ResponsiveImageProps {
  source: any;
  alt?: string;
  mobileSize?: { width: number; height: number };
  tabletSize?: { width: number; height: number };
  largeTabletSize?: { width: number; height: number };
  desktopSize?: { width: number; height: number };
}

const ResponsiveImage: React.FC<ResponsiveImageProps> = ({
  source,
  alt,
  mobileSize = { width: 200, height: 200 },
  tabletSize = { width: 300, height: 300 },
  largeTabletSize = { width: 400, height: 400 },
  desktopSize = { width: 500, height: 500 },
}) => {
  const { currentBreakpoint } = useResponsive();

  const getImageSize = () => {
    switch (currentBreakpoint) {
      case 'mobile':
        return mobileSize;
      case 'tablet':
        return tabletSize;
      case 'largeTablet':
        return largeTabletSize;
      case 'desktop':
        return desktopSize;
      default:
        return mobileSize;
    }
  };

  const { width, height } = getImageSize();

  return (
    <Image
      source={source}
      style={{ width, height }}
      accessibilityLabel={alt}
      resizeMode="contain"
    />
  );
};

